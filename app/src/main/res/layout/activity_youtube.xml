<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="@color/colorDont"
    tools:context=".Youtube">

    <TextView
        android:drawableEnd="@drawable/ic_money"
        android:drawableStart="@drawable/ic_money"
        android:id="@+id/title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:text="Create a youtube channel"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@id/banner_container"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/meso"
            android:drawableTop="@drawable/ic_money"
            android:drawableBottom="@drawable/ic_money"
            android:drawableEnd="@drawable/ic_money"
            android:drawableStart="@drawable/ic_money"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content" />
    </ScrollView>
    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
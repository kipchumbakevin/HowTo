<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorDont"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="20dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
        <TextView
            android:drawableStart="@drawable/ic_money"
            android:drawableEnd="@drawable/ic_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAKE MONEY NOW"
            android:id="@+id/title"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#fff"/>
    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/share"
        android:layout_height="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:id="@+id/insurance"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="2dp"
            android:background="@drawable/linback"
            app:layout_constraintTop_toBottomOf="@id/bitcoin"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawableStart="@drawable/ic_money"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:textSize="13sp"
                android:layout_height="wrap_content"
                android:text="INSURANCE"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/ff"
                android:layout_marginTop="5dp"
                android:layout_width="100dp"
                app:cardCornerRadius="4dp"
                android:layout_height="100dp">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/insurance" />
            </androidx.cardview.widget.CardView>
        </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="25dp"
        android:layout_width="100dp"
        app:layout_constraintStart_toEndOf="@id/insurance"
        app:layout_constraintTop_toBottomOf="@id/bitcoin"
        app:layout_constraintEnd_toStartOf="@id/sellads"
        app:cardCornerRadius="4dp"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:fitsSystemWindows="true"
            android:scaleType="fitXY"
            android:src="@drawable/money" />
    </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/bitcoin"
            android:padding="2dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bitcoin" />
                <TextView
                    android:drawableStart="@drawable/ic_money"
                    android:drawableEnd="@drawable/ic_money"
                    android:layout_width="wrap_content"
                    android:textColor="#fff"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:text="BITCOIN"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:id="@+id/sellads"
            android:orientation="vertical"
            android:padding="2dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/linback"
            app:layout_constraintTop_toBottomOf="@id/bitcoin"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawableStart="@drawable/ic_money"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:textSize="13sp"
                android:layout_height="wrap_content"
                android:text="SELL ADS"/>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                app:cardCornerRadius="4dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100dp"
                    android:scaleType="fitXY"
                    android:layout_height="100dp"
                    android:src="@drawable/sellads" />
            </androidx.cardview.widget.CardView>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:id="@+id/marketing"
            android:orientation="vertical"
            android:padding="2dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/insurance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/marketing" />
                <TextView
                    android:drawableStart="@drawable/ic_money"
                    android:drawableEnd="@drawable/ic_money"
                    android:layout_width="wrap_content"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:text="MARKETING"/>
            </androidx.cardview.widget.CardView>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.cardview.widget.CardView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_marginBottom="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="4dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:id="@+id/rate"
        android:layout_marginBottom="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="4dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
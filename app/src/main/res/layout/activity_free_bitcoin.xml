<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingEnd="20dp"
    android:paddingStart="20dp"
    android:paddingTop="20dp"
    android:background="@color/colorDont"
    android:layout_height="match_parent"
    tools:context=".FreeBitcoinActivity">
    <TextView
        android:drawableEnd="@drawable/ic_money"
        android:drawableStart="@drawable/ic_money"
        android:id="@+id/title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:text="Free Bitcoin"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:id="@+id/learnmore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Learn more -->"
        android:textColor="@color/colorWhite"
        android:background="@drawable/textview"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"/>

    <ScrollView
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/learnmore"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/meso"
            android:drawableTop="@drawable/ic_money"
            android:drawableBottom="@drawable/ic_money"
            android:drawableEnd="@drawable/ic_money"
            android:drawableStart="@drawable/ic_money"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:text="@string/freebitcoin"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>